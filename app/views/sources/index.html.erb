<p id="notice"><%= notice %></p>

<h1>Listing Sources</h1>

<table>
  <thead>
    <tr>
      <th>Sourceid</th>
      <th>Sourcedescription</th>
      <th>Createdby</th>
      <th>Createddate</th>
      <th>Lastmodifiedby</th>
      <th>Lastmodifieddate</th>
      <th>Isdeleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.SourceId %></td>
        <td><%= source.SourceDescription %></td>
        <td><%= source.CreatedBy %></td>
        <td><%= source.CreatedDate %></td>
        <td><%= source.LastModifiedBy %></td>
        <td><%= source.LastModifiedDate %></td>
        <td><%= source.IsDeleted %></td>
        <td><%= link_to 'Show', source %></td>
        <td><%= link_to 'Edit', edit_source_path(source) %></td>
        <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

