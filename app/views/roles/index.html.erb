<h1>Listing Roles</h1>

<table>
  <thead>
    <tr>
      <th>Roleid</th>
      <th>Sourceid</th>
      <th>Roledescription</th>
      <th>Createdby</th>
      <th>Createddate</th>
      <th>Lastmodifiedby</th>
      <th>Lastmodifieddate</th>
      <th>Isdeleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.RoleId %></td>
        <td><%= role.SourceId %></td>
        <td><%= role.RoleDescription %></td>
        <td><%= role.CreatedBy %></td>
        <td><%= role.CreatedDate %></td>
        <td><%= role.LastModifiedBy %></td>
        <td><%= role.LastModifiedDate %></td>
        <td><%= role.IsDeleted %></td>
        <td><%= link_to 'Show', role %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

